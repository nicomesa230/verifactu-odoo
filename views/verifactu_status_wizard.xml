<odoo>
    <record id="view_verifactu_status_wizard_form" model="ir.ui.view">
        <field name="name">verifactu.status.wizard.form</field>
        <field name="model">verifactu.status.wizard</field>
        <field name="arch" type="xml">
            <form string="Estado AEAT">
                <group>
                    <field name="status" readonly="1"/>
                    <field name="sent_date" readonly="1"/>
                    <field name="full_response" readonly="1" widget="html"/>
                </group>
                <footer>
                    <button string="Cerrar" class="btn-primary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
