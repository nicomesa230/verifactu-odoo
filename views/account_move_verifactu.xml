<odoo>
    <record id="view_move_form_verifactu" model="ir.ui.view">
        <field name="name">account.move.form.verifactu</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">

            <xpath expr="//header" position="inside">
                <button name="action_send_verifactu"
                        type="object"
                        string="Enviar a AEAT"
                        class="oe_highlight"
                        attrs="{'invisible': [('move_type', '!=', 'out_invoice'), ('verifactu_sent', '=', True), ('state', '!=', 'posted')]}"/>

                <button name="action_view_verifactu_status"
                        type="object"
                        string="Mirar estado AEAT"
                        class="btn-primary"/>

                <button name="action_download_verifactu_xml"
                        type="object"
                        string="Descargar VeriFactu XML"
                        class="btn-primary"
                        attrs="{'invisible': [('verifactu_sent', '=', False)]}"/>

                <field name="verifactu_sent" invisible="1"/>
            </xpath>

        </field>
    </record>
</odoo>
